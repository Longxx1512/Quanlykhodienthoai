<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activiy.NhaCungCap.UpdateNhaCCActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thống kê"
                android:textSize="30sp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textColor="#F48D8D"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm nhập nhiều nhất: "
                android:textSize="25sp"
                android:textColor="@color/design_default_color_primary"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/SPNKNN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                android:hint="Sản phẩm nhập nhiều nhất"
                android:gravity="start|center_vertical"
                android:textColor="@color/design_default_color_primary" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm xuất nhiều nhất: "
                android:textSize="25sp"
                android:textColor="@color/design_default_color_primary"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/SPXKNN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                android:hint="Sản phẩm xuất nhiều nhất"
                android:gravity="start|center_vertical"
                android:textColor="@color/design_default_color_primary" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm nhập ít nhất: "
                android:textSize="25sp"
                android:textColor="@color/design_default_color_primary"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/SPNKIN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                android:hint="Sản phẩm nhập ít nhất"
                android:gravity="start|center_vertical"
                android:textColor="@color/design_default_color_primary" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm xuất ít nhất: "
                android:textSize="25sp"
                android:textColor="@color/design_default_color_primary"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/SPXKIN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_marginTop="5dp"
                android:padding="16dp"
                android:hint="Sản phẩm xuất ít nhất"
                android:gravity="start|center_vertical"
                android:textColor="@color/design_default_color_primary" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Thoát"
                android:id="@+id/BTNEXIT"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>